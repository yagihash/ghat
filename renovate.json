{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Asia/Tokyo)",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "labels": ["dependencies"],
  "reviewers": ["yagihash"],
  "schedule": ["after 8pm on friday"],
  "prHourlyLimit": 0,
  "automerge": false,
  "platformAutomerge": false,
  "rangeStrategy": "pin",
  "stabilityDays": 3,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 8pm on friday"]
  },
  "packageRules": [
    {
      "description": "Pin GitHub Actions to commit SHA for security",
      "matchManagers": ["github-actions"],
      "pinDigests": true
    },
    {
      "description": "Group GitHub Actions updates",
      "groupName": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch", "digest"]
    },
    {
      "description": "Group Google Cloud SDK updates together",
      "groupName": "Google Cloud SDK",
      "matchPackagePrefixes": ["cloud.google.com/go"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "description": "Group OpenTelemetry updates together",
      "groupName": "OpenTelemetry",
      "matchPackagePrefixes": ["go.opentelemetry.io"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "description": "Group golang.org/x/* updates together",
      "groupName": "golang.org/x packages",
      "matchPackagePrefixes": ["golang.org/x"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "description": "Group googleapis updates together",
      "groupName": "googleapis packages",
      "matchPackagePrefixes": ["google.golang.org"],
      "matchUpdateTypes": ["minor", "patch"]
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": false,
    "stabilityDays": 0,
    "schedule": ["at any time"]
  }
}
